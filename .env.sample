# --- API KEYS ---
BINANCE_API_KEY=YOUR_BINANCE_KEY
BINANCE_API_SECRET=YOUR_BINANCE_SECRET
BYBIT_API_KEY=YOUR_BYBIT_KEY
BYBIT_API_SECRET=YOUR_BYBIT_SECRET

# --- CORE SETTINGS ---
SYMBOL=BTCUSDT
QUOTE=USDT
BASE=BTC

# Grid range and shape
GRID_MIN_PRICE=56000
GRID_MAX_PRICE=62000
GRID_LEVELS=40
GRID_ORDER_SIZE_USDT=25

# Hedge ratio (0.0 - 1.0). 0.6 is a good default for sideways markets
HEDGE_RATIO=0.6

# Risk / behavior
SESSION_MAX_DD_PCT=3
EXIT_ON_BREAKOUT=true

# Dry run: true = simulate only (no real orders)
DRY_RUN=true

# Auto grid (derive band from historical closes)
AUTO_GRID=false
AUTO_GRID_INTERVAL=1h
AUTO_GRID_LIMIT=200
AUTO_GRID_LOW_PCT=0.1
AUTO_GRID_HIGH_PCT=0.9
